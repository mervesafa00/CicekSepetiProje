@model CicekSepetiProje.Models.Urunler
@{
    ViewData["Title"] = "Ürün Ekle";
    Layout = "_AdminLayout";
}

<div class="card shadow-sm p-4">
    <h3 class="mb-4 text-primary"><i class="fa-solid fa-plus-circle"></i> Yeni Çiçek Ekle</h3>

    <form asp-action="UrunEkle" method="post">
        
        <div class="mb-3">
            <label class="form-label fw-bold">Ürün Adı</label>
            <input name="UrunAdi" class="form-control" placeholder="Örn: Kırmızı Gül Buketi" required />
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold">Açıklama</label>
            <textarea name="Aciklama" class="form-control" rows="2" placeholder="Çiçeğin özellikleri..."></textarea>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Fiyat (TL)</label>
                <input name="Fiyat" type="text" class="form-control" placeholder="Örn: 450,00" required />
            </div>
            <div class="col-md-6 mb-3">
                <label class="form-label fw-bold">Stok Adedi</label>
                <input name="Stok" type="number" class="form-control" value="50" required />
            </div>
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold">Resim Yolu</label>
            <input name="ResimUrl" class="form-control" value="/img/gul.jpg" placeholder="/img/dosya_adi.jpg" />
            <div class="form-text text-muted">Klasördeki resim adını yazın (Örn: /img/papatya.jpg)</div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-success px-4 fw-bold">Kaydet</button>
            <a asp-action="UrunYonetimi" class="btn btn-secondary px-4">İptal</a>
        </div>

    </form>
</div>