@model IEnumerable<CicekSepetiProje.Models.Urunler>
@{
    ViewData["Title"] = "Ürün Yönetimi";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h3 class="text-primary"><i class="fa-solid fa-leaf"></i> Ürün Listesi</h3>
    <a asp-action="UrunEkle" class="btn btn-success fw-bold"><i class="fa-solid fa-plus"></i> Yeni Ürün Ekle</a>
</div>

<table class="table table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Resim</th>
            <th>Ürün Adı</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><img src="@item.ResimUrl" width="50" height="50" style="object-fit:cover; border-radius:5px;"></td>
                <td class="fw-bold">@item.UrunAdi</td>
                <td class="text-success">@item.Fiyat TL</td>
                <td>
                    @if(item.Stok < 10) { <span class="badge bg-danger">@item.Stok (Kritik)</span> }
                    else { <span class="badge bg-success">@item.Stok</span> }
                </td>
                <td>
                    <a asp-action="UrunSil" asp-route-id="@item.UrunId" class="btn btn-sm btn-outline-danger" 
                         onclick="return confirm('Bu ürünü gerçekten silmek istiyor musunuz?');">
                              <i class="fa-solid fa-trash"></i> Sil
                    </a>
                   
                </td>
            </tr>
        }
    </tbody>
</table>